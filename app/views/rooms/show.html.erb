
<section class="container">
    <header class="show-room">
      <h2 class="text-center"><%= @room.title %></h2>
    </header>
    <%= image_tag(@room.image.url, alt: 'Image') if @room.image? %>

    <article>
      <% @room.chores.each do |chore| %>
        <ul>
          <li class="chore-list"><%= chore.name %></li>
        </ul>
        <% end %>
    </article>

    <footer>
    </footer>
    <p class="links text-center"><%= link_to 'Back', rooms_path %> | <%= link_to 'Edit', edit_room_path(@room) %> | <%= link_to 'Delete', room_path(@room), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </section>
